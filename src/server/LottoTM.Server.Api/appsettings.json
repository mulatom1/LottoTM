{
  "AllowedHosts": "*",
  "ApiVersion": "1.0.0",
  "ConnectionStrings": {
    "DefaultConnection": "Server=server_name;Database=LottoTM;Trusted_Connection=True;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertification=True"
  },
  "Jwt": {
    "Key": "twoj-tajny-klucz-minimum-32-znaki",
    "Issuer": "LottoTM",
    "Audience": "LottoTM"
  },
  "Swagger": {
    "Enabled": false,
    "Title": "LottoTM Server API",
    "Description": "API for LottoTM Server",
    "Contact": {
      "Name": "LottoTM Support",
      "Email": "tomsoft1@poczta.fm"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "LottoTM.Api"
    }
  }
}